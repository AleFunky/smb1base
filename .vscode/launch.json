    "version": "0.2.0",
    "configurations": [
        {
            "type": "alchemy65",
            "request": "launch",
            "name": "Debug rom with Mesen",
            "preLaunchTask": "Build NES project",
            "romPath": "${workspaceFolder}/build/smb1base.nes",
            "dbgPath": "${workspaceFolder}/build/smb1base.dbg",
            "program": "${workspaceFolder}/tools/Windows/emulator/mesen.exe",
            "sourcePath": "${workspaceFolder}/",
            "stopOnEntry": true,
            "resetOnEntry": true
        }
    ]
}