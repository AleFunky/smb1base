{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile",
            "runOptions": {"instanceLimit": 10},
            // "type": "cmake",
            // "command": "build",
            "type": "process",
            "command": "${config:cmake.cmakePath}",
            "args": ["--build", "${config:cmake.buildDirectory}", "--target", "all",
                "--verbose"
            ],
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "close": true,
                "showReuseMessage": false,
                "clear": false
            },
            "problemMatcher": [
                {
                    "owner": "ca65",
                    "applyTo": "allDocuments",
                    "source": "CMake",
                    "fileLocation": ["relative", "${workspaceFolder}"],
                    "pattern": [
                        {
                            "regexp": "^CMake (.*) at ([^:]*):([0-9]+) ?([^:]*): ?(.*)$",
                            "file": 2,
                            "line": 3,
                            "severity": 1
                        },
                        {
                            "regexp": "^(.*)$",
                            "message": 1,
                            "loop": true
                        },
                    ]
                },
                {
                    "owner": "ca65",
                    "applyTo": "allDocuments",
                    "source": "ca65",
                    "pattern": [
                        {
                            "regexp": "^([^:]*):([0-9]+): ?([^:]*): ?(.*)$",
                            "file": 1,
                            "line": 2,
                            "severity": 3,
                            "message": 4
                        },
                    ]
                },
                {
                    "owner": "ca65",
                    "applyTo": "allDocuments",
                    "source": "ca65",
                    "pattern": [
                        {
                            "regexp": "^([^:]*)\\(([0-9]+)\\): ?([^:]*): ?(.*)$",
                            "file": 1,
                            "line": 2,
                            "severity": 3,
                            "message": 4
                        },
                    ]
                },
                {
                    "owner": "ca65",
                    "applyTo": "allDocuments",
                    "fileLocation": "absolute",
                    "source": "ca65",
                    "pattern": [
                        {
                            "regexp": "^([a-zA-Z]:.+):([\\d]+): ?(\\w*): ?(.*)$",
                            "file": 1,
                            "line": 2,
                            "severity": 3,
                            "message": 4
                        }
                    ]
                }
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "inputs": [
        {
            "id": "inputId",
            "type": "command",
            "command": "watch-run.getFilename",
            "args" : "compile"
        }
    ]
}