                {
                    "owner": "ca65",
                    "applyTo": "allDocuments",
                    "fileLocation": [
                        "relative",
                        "${workspaceFolder}"
                    ],
                    "source": "ca65",
                    "pattern": [
                        {
                            "regexp": "^(\\./.+):([\\d]+): ?(\\w*): ?(.*)$",
                            "file": 1,
                            "line": 2,
                            "severity": 3,
                            "message": 4
                        }
                    ]
                }
