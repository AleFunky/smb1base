{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "assemble",
            "runOptions": {"instanceLimit": 1},
            "type": "shell",
            "command": "cmd",
            "args": ["/c", "${workspaceFolder}\\build.bat"],
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "close": false,
                "showReuseMessage": false,
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                {
                    "owner": "ca65",
                    "applyTo": "allDocuments",
                    "source": "CMake",
                    "fileLocation": ["relative", "${workspaceFolder}"],
                    "pattern": [
                        {
                            "regexp": "^CMake (.*) at ([^:]+):([0-9]+) ?([^:]*): ?(.*)$",
                            "file": 2,
                            "line": 3,
                            "severity": 1
                        },
                        {
                            "regexp": "^(.*)$",
                            "message": 1,
                            "loop": true
                        },
                    ]
                },
                {
                    "owner": "ca65",
                    "applyTo": "allDocuments",
                    "source": "CMake",
                    "fileLocation": "absolute",
                    "pattern": [
                        {
                            "regexp": "^CMake (.*) at ([a-zA-Z]?:?.+):([0-9]+)",
                            "file": 2,
                            "line": 3,
                            "severity": 1
                        },
                        {
                            "regexp": "(.*)",
                            "message": 1,
                        },
                        {
                            "regexp": "(.*)",
                            "message": 1,
                        },
                        {
                            "regexp": "(.*)",
                            "message": 1,
                        },
                        {
                            "regexp": "(.*)",
                            "message": 1,
                        },
                        {
                            "regexp": "(.*)",
                            "message": 1,
                        },
                        {
                            "regexp": "(.*)",
                            "message": 1,
                        },
                    ]
                },
